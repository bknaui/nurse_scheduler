<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Schedules</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="css/all.min.css">
  <link rel="stylesheet" href="css/ionicons.min.css">
  <link rel="stylesheet" href="css/tempusdominus-bootstrap-4.min.css">
  <link rel="stylesheet" href="css/icheck-bootstrap.min.css">
  <link rel="stylesheet" href="css/jqvmap.min.css">
  <link rel="stylesheet" href="css/adminlte.min.css">
  <link rel="stylesheet" href="css/OverlayScrollbars.min.css">
  <link rel="stylesheet" href="css/selectize.css">
  <link rel="stylesheet" href="css/simplePagination.css">
  <link rel="stylesheet" href="css/jquery.toast.min.css">
  <link rel="stylesheet" href="css/theme-font.css">
  <link rel="stylesheet" href="css/styles.css">
</head>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
      </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <!-- Sidebar -->
      <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
          <div class="image">
            <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
          </div>
          <div class="info">
            <a href="#" class="d-block">ADMIN</a>
          </div>
        </div>

        <nav class="mt-2">
          <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item">
              <a href="/admin" class="nav-link">
                <i class="nav-icon fas fa-calendar"></i>
                <p>Schedules</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/announcement" class="nav-link">
                <i class="nav-icon fas fa-info"></i>
                <p>Announcements</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/logout" class="nav-link">
                <i class="nav-icon fas fa-power-off"></i>
                <p>Log Out</p>
              </a>
            </li>
          </ul>
        </nav>
        <!-- /.sidebar-menu -->
      </div>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0 text-dark">Nurse Schedules</h1>
            </div>
          </div>
        </div>
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="card">
            <div class="card-header m-0 pt-3">
              <div class="card-title m-0 p-0 w-100">
                <div class="row m-0 p-0">
                  <div class="col-md-3">
                    <select id="search_nurse" placeholder="Nurse">

                    </select>
                  </div>
                  <div class="col-md-3">
                    <select id="search_department" placeholder="Department">

                    </select>
                  </div>
                  <div class="col-md-2">
                    <select id="search_cluster" placeholder="Cluster">

                    </select>
                  </div>
                  <div class="col-md-2">
                    <select id="search_month" placeholder="Month">
                    </select>
                  </div>
                  <div class="col-md-1">
                    <select id="search_year" placeholder="Year">
                    </select>
                  </div>
                  <div class="col-md-1 d-flex align-items-center justify-content-end">
                    <button class="btn btn-sm btn-success"><i class="fas fa-upload" id="btn_upload"></i></button>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Nurse</th>
                    <th>Area/Unit/Department</th>
                    <th>Cluster</th>
                    <th>Month</th>
                    <th>Year</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody id="nurse_schedule_list">
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="5">
                      <div class="d-flex justify-content-center align-items-center">
                        <div class="pagination-holder">

                        </div>
                      </div>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- <footer class="main-footer">
      <strong>Copyright &copy; 2020 <a href="http://adminlte.io">Asnaui O. Pangcatan</a></strong>
    </footer> -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">

    </aside>
  </div>

  <div class="modal fade" id="loader">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-body text-center">
          <div class="spinner-border"></div>
          <div class="mt-3">
            <p>Uploading file...</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="upload_modal">
    <div class="modal-dialog modal-sm">
      <div class="modal-content user-text">
        <div class="modal-header">
          <h5 class="modal-title">Upload File</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="input-group">
            <input type="file" id="file_upload" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="nurse_schedules_modal">
    <div class="modal-dialog modal-fullscreen">
      <div class="modal-content p-2">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="table-responsive">
            <div class="d-flex flex-column align-items-center justify-content-center">
              <div>Republic of the Philippines</div>
              <div>Department of Health</div>
              <div class="font-weight-bold" style="font-size: 18px;">VICENTE SOTTO MEMORIAL MEDICAL
                CENTER</div>
              <div class="mt-2 font-weight-bold" style="font-size: 18px;"><u>STAFFING SCHEDULE</u>
              </div>
              <div class="d-flex flex-row align-items-center justify-content-center font-weight-bold"
                style="font-size: 18px;">
                <div>FOR THE MONTH OF</div>
                <div class="ml-1"><u id="excel_date">MAY 2020</u></div>
              </div>
            </div>
            <div class="d-flex flex-row font-weight-bold" style="font-size: 18px;">
              <div>AREA/UNIT/DEPARMENT:</div>
              <div class="ml-1"><u id="excel_cluster">OUT PATIENT DEPARTMENT</u></div>
            </div>
            <table id="nurse_list" class="table table-bordered mt-2">
              <thead class="text-center m-0 p-0" id="table_thead">
                <tr>
                  <th class='m-0 p-0'>NAME/DEPARTMENT</th>
                  <% for(let i=1; i<=31; i++){ %>
                  <th class='m-0 p-0'><%- i %></th>
                  <% } %>
                </tr>
              </thead>
              <tbody class="text-center" id="table_tbody"></tbody>
            </table>
            <div class="d-flex flex-row-reverse">
              <button class="btn btn-success" id="btn_save">SAVE</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="detail_modal">
    <div class="modal-dialog modal-fullscreen">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Nurse Information</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div>
            <div class="d-flex flex-column justify-content-center align-items-center mb-2">
              <div class="d-flex justify-content-center">
                <img src="images/ic_nurse.png" class="w-50 h-50" />
              </div>
              <div class="d-flex flex-column justify-content-center mt-3">
                <div class="font-weight-bold text-center" id="nurse_name">Asnaui O. Pangcatan</div>
                <div class="text-center" id="nurse_department">Computer Maintenance Technologist II
                </div>
              </div>
            </div>

            <div class="card p-0 m-0">
              <div class="card-body p-1">
                <div class="d-flex justify-content-center mb-1 ">
                  <div class="schedule-title align-items-center p-3 font-weight-bold" id="calendar_title"></div>
                </div>
                <div class="d-flex flex-row text-center">
                  <div class="flex-fill" id="column_1">
                    <div class="border-1">Sun</div>
                  </div>
                  <div class="flex-fill" id="column_2">
                    <div class="border-1">Mon</div>
                  </div>
                  <div class="flex-fill" id="column_3">
                    <div class="border-1">Tue</div>
                  </div>
                  <div class="flex-fill" id="column_4">
                    <div class="border-1">Wed</div>
                  </div>
                  <div class="flex-fill" id="column_5">
                    <div class="border-1">Thu</div>
                  </div>
                  <div class="flex-fill" id="column_6">
                    <div class="border-1">Fri</div>
                  </div>
                  <div class="flex-fill" id="column_7">
                    <div class="border-7">Sat</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="js/jquery.min.js"></script>
  <script src="js/jquery-ui.min.js"></script>
  <script>
    $.widget.bridge('uibutton', $.ui.button)
  </script>
  <script src="js/bootstrap.bundle.min.js"></script>
  <script src="js/moment.min.js"></script>
  <script src="js/jquery.overlayScrollbars.min.js"></script>
  <script src="js/adminlte.js"></script>
  <script src="js/demo.js"></script>
  <script src="js/selectize.min.js"></script>
  <script src="js/jquery.simplePagination.js"></script>
  <script src="js/jquery.toast.min.js"></script>
  <script src="js/xlsx.full.min.js"></script>
  <script src="js/selectize-admin.js"></script>
  <script src="js/admin.js"></script>
</body>

</html>